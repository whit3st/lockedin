{
    "manifest_version": 3,
    "name": "LockedIn",
    "version": "1.0.0",
    "description": "A tool for comparing resumes and job descriptions in LinkedIn using AI for free.",
    "permissions": [],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/icon128.png"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "public/**/*"
            ],
            "matches": [
                "https://*.linkedin.com/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ]
}